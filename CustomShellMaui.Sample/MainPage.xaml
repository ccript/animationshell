<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomShellMaui.Sample.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                Text="Open Current Config"
                Clicked="OnCurrentRoot"
                HorizontalOptions="Center" />

            <Button
                Text="Open Root Fade"
                Clicked="OnFadeRoot"
                HorizontalOptions="Center" />

            <Button
                Text="Open Push Left/Right"
                Clicked="OnPushLeftRight"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

