<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CustomShellMaui.Sample.Pages.New2"
             BackgroundColor="BlueViolet">
    <Shell.TitleView>
        
        <HorizontalStackLayout BackgroundColor="LawnGreen"
                               HeightRequest="100" VerticalOptions="Center">
            <Image Source="dotnet_bot"/>
            <Label Text="My New1" TextColor="Black" FontSize="22"/>
            <Label Text="Custom Height" TextColor="Black" FontSize="16"/>
        </HorizontalStackLayout>
    </Shell.TitleView>
 <VerticalStackLayout Padding="30" Spacing="20">
        <Label 
            Text="OPEN IN ROOT"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Open Root Main" Clicked="OnGoRootMain" />
        
    </VerticalStackLayout>
</ContentPage>
